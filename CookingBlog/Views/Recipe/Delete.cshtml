@model RecipeEditOrDeleteViewModel
@{
    ViewBag.Title = "Delete Recipe";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <img src="@Model.ImageUrl" class="card-img-top img-fluid" style="max-height: 500px; object-fit: contain;" alt="Recipe Image">
                <p class="mb-0"><strong>Recipe Description: </strong>@Model.Description</p>
                <p class="text-danger mt-3"><strong>Are you sure you want to delete @(Model.Title)?</strong></p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" value="Confirm">Confirm Delete</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
